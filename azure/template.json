{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "app_name": {
            "defaultValue": "parameters('app_name')",
            "type": "string"
        },
        "location": {
            "defaultValue": "parameters('location')",
            "type": "string"
        },
        "domain": {
            "defaultValue": "[concat(parameters('app_name'), '.azurewebsites.net')]",
            "type": "string"
        },
        "webhook_url": {
            "defaultValue": "[concat('https://', parameters('domain'), '/person')]",
            "type": "string"
        },
        "serviceplan_name": {
            "defaultValue": "[concat(parameters('app_name'), '-serviceplan')]",
            "type": "string"
        },
        "topic_name": {
            "defaultValue": "[concat(parameters('app_name'), '-site')]",
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
    {
        "type": "Microsoft.Web/serverfarms",
        "kind": "linux",
        "name": "[parameters('serviceplan_name')]",
        "sku": {
            "name": "B1",
            "tier": "Basic",
            "size": "B1",
            "family": "B",
            "capacity": 1
        },
        "apiVersion": "2016-09-01",
        "location": "[parameters('location')]",
        "scale": null,
        "properties": {
            "reserved": true
        },
        "dependsOn": []
    },
    {
        "type": "Microsoft.Web/sites",
        "kind": "app,linux,container",
        "name": "[parameters('topic_name')]",
        "apiVersion": "2016-08-01",
        "location": "[parameters('location')]",
        "properties": {
            "serverFarmId": "[parameters('app_name')]",
            "reserved": false,
            "siteConfig": {
                "netFrameworkVersion": "v4.6",
                "linuxFxVersion": "DOCKER|bartr/m4debug"
            },
            "scmSiteAlsoStopped": false,
            "microService": "WebSites"
        },
        "dependsOn": [
            "[resourceId('Microsoft.Web/serverfarms', parameters('serviceplan_name'))]"
        ]
    },
    {
        "type": "Microsoft.EventGrid/topics",
        "name": "[parameters('topic_name')]",
        "location": "[parameters('location')]",
        "apiVersion": "2018-01-01"
    }, 
    {
        "name": "[concat(parameters('app_name'), '-person-webhook')]",
        "type": "Microsoft.EventGrid/eventSubscriptions",
        "apiVersion": "2018-01-01",
        "properties": {
            "destination": {
                "endpointType": "WebHook",
                "properties": {
                    "endpointUrl": "[parameters('webhook_url')]"
                }
            },
            "filter": {
                "includedEventTypes": [
                    "All"
                ]
            }
        },
        "dependsOn": [
            "[resourceId('Microsoft.EventGrid/topics', parameters('topic_name'))]"
        ]
    }]
}