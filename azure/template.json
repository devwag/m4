{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "dns_prefix": {
            "defaultValue": "parameters('dns_prefix')",
            "type": "string"
        },
        "location": {
            "defaultValue": "parameters('location')",
            "type": "string"
        },
        "sites_name": {
            "defaultValue": "[concat(parameters('dns_prefix'), '-site')]",
            "type": "string"
        },
        "event_grid_topic_name": {
            "defaultValue": "[concat(parameters('dns_prefix'), '-topic')]",
            "type": "string"
        },
        "config_web_name": {
            "defaultValue": "[concat(parameters('dns_prefix'), '-web')]",
            "type": "string"
        },
        "appservice_name": {
            "defaultValue": "[concat(parameters('dns_prefix'), '-appserviceplan')]",
            "type": "string"
        },
        "deployments_121536470390904_name": {
            "defaultValue": "121536470390904",
            "type": "string"
        },
        "webhook_url": {
            "defaultValue": "[concat('https://', parameters('dns_prefix'), '.azurewebsites.net/person')]",
            "type": "string"
        }
    },
    "variables": {},
    "resources": [{
        "type": "Microsoft.EventGrid/topics",
        "name": "[parameters('dns_prefix')]",
        "location": "[parameters('location')]",
        "apiVersion": "2018-01-01"
    }, {
        "type": "Microsoft.Web/serverfarms",
        "name": "[parameters('appservice_name')]",
        "apiVersion": "2016-09-01",
        "location": "[parameters('location')]"
    }, {
        "type": "Microsoft.Web/sites",
        "name": "[parameters('sites_name')]",
        "apiVersion": "2016-03-01",
        "location": "[parameters('location')]",
        "kind": "app,linux,container",
        "properties": {
            "name": "[parameters('sites_name')]",
            "siteConfig": {
                "appSettings": [
                    {
                        "name": "WEBSITES_ENABLE_APP_SERVICE_STORAGE",
                        "value": "false"
                    }
                ],
                "appCommandLine": "",
                "linuxFxVersion": "DOCKER|bartr/m4"
            },
            "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appservice_name'))]"
        },
        "dependsOn": [
            "[resourceId('Microsoft.Web/serverfarms', parameters('appservice_name'))]"
        ]
    },
    {
        "type": "Microsoft.EventGrid/eventSubscriptions",
        "name": "[concat(parameters('dns_prefix'), '-person-webhook')]",
        "apiVersion": "2018-01-01",
        "properties": {
            "destination": {
                "endpointType": "WebHook",
                "properties": {
                    "endpointUrl": "[parameters('webhook_url')]"
                }
            },
            "filter": {
                "includedEventTypes": [
                    "All"
                ]
            }
        },
        "dependsOn": [
            "[resourceId('Microsoft.EventGrid/topics', parameters('dns_prefix'))]"
        ]
    }]
}